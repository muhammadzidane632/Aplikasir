<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LandingPageActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/semibold"
        android:text="@string/selamat_datang_muhammad_zidane"
        android:textColor="@color/black"
        android:textSize="34sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:layout_marginTop="-12dp"
        android:background="@drawable/graph"
        android:contentDescription="@string/app_name" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="-38dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/uang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/semibold"
                android:text="@string/rp_200_000_000"
                android:textColor="@color/black"
                android:textSize="28sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/icon_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/count"
                app:layout_constraintBottom_toBottomOf="@id/uang"
                app:layout_constraintStart_toEndOf="@id/uang"
                app:layout_constraintTop_toTopOf="@id/uang" />


            <ImageButton
                android:id="@+id/btn_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/faq_tambah"
                app:layout_constraintEnd_toStartOf="@id/btn_pelanggan"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/uang" />

            <TextView
                android:id="@+id/txt_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/transaksi"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/btn_transaksi"
                app:layout_constraintStart_toStartOf="@id/btn_transaksi"
                app:layout_constraintTop_toBottomOf="@id/btn_transaksi" />


            <ImageButton
                android:id="@+id/btn_pelanggan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pelanggan_fag"
                app:layout_constraintEnd_toStartOf="@id/btn_lainnya"
                app:layout_constraintStart_toEndOf="@id/btn_transaksi"
                app:layout_constraintTop_toTopOf="@id/btn_transaksi" />

            <TextView
                android:id="@+id/txt_pelanggan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/pelanggan"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/btn_pelanggan"
                app:layout_constraintStart_toStartOf="@id/btn_pelanggan"
                app:layout_constraintTop_toBottomOf="@id/btn_pelanggan" />


            <ImageButton
                android:id="@+id/btn_lainnya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/faq_laporan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_pelanggan"
                app:layout_constraintTop_toTopOf="@id/btn_transaksi" />

            <TextView
                android:id="@+id/txt_lainnya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/laporan"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/btn_lainnya"
                app:layout_constraintStart_toStartOf="@id/btn_lainnya"
                app:layout_constraintTop_toBottomOf="@id/btn_lainnya" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>